%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %title StaunchRobots
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %meta{:content => "", :name => "StaunchRobots Home page"}
    
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
    :css
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
