      <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
  %body{"data-spy" => "scroll", "data-target" => "#services_nav", "data-offset" => "130"}
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          .nav-collapse
            %ul.nav
              %li{:class => "#{params[:action] == "index" ? "active" : ""}"}
                %a{:href => "/"} Home
              %li{:class => "#{params[:action] == "services" ? "active" : ""}"}
                %a{:href => "/services"} Services
              %li{:class => "#{params[:action] == "internal_projects" ? "active" : ""}"}
                %a{:href => "/internal_projects"} Internal Projects
              %li
                %a.contact_btn{:href => "#"} Contact Us
          / /.nav-collapse

    .container
      = yield
      %hr
